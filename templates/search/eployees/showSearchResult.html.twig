{% extends "base.html.twig" %}

{% block pageTitle %}
    Searched Employees
{% endblock %}

{% block body %}  

    <table class="table">
        <tr>
            <th>
                Id.
            </th>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                BornDate
            </th>
            <th>
                Document Id
            </th>
        </tr>
        {% for employee in employees %}
            <tr>
                <td>
                    <a href="{{ path('app_employee_profile', { 'id': employee.id }) }}">
                        {{ employee.id }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_employee_profile', { 'id': employee.id }) }}">
                        {{ employee.name }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_employee_profile', { 'id': employee.id }) }}">
                        {{ employee.surname }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_employee_profile', { 'id': employee.id }) }}">
                        {{ employee.bornDate|date('Y-m-d') }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_employee_profile', { 'id': employee.id }) }}">
                        {{ employee.idDocumentNumber }}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}